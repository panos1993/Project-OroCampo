@if (Model.PhotoCategories != null && Model.PhotoCategories.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="row">Id</th>
                <th scope="col">Όνομα κατηγορίας</th>
                <th scope="col">Ενέργιες</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.PhotoCategories.Count; i++)
            {
                var temp = Model.PhotoCategories[i];

                <tr>
                    <th scope="row">@i</th>
                    <td>@temp.Name</td>
                    <td><button type="button" class="btn btn-danger">Διαγραφή</button></td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <h1>Δεν υπάρχουν κατηγορίες φωτογραφιών</h1>
}