@model OroCampo.WebSite.Models.PhotoCategoryModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SavePhotoCategory", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "saveProgramForm" }))
{
    @Html.AntiForgeryToken()
    <h2>Διαχείρηση των κατηγοριών για τις φωτογραφίες</h2>

    @Html.Label("Κατηγορία Φωτογραφίας")
    <text>&ensp;</text>
    @Html.TextBoxFor(m => m.NewPhotoCategoryName)
    <input type="submit" value="Submit" />
    @*<button type="submit" id="submitProgramForm" class="btn btn-primary waves-effect w-md waves-light m-b-5">*@
}


