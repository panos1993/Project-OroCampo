@model OroCampo.WebSite.Models.ProductCategoryModel
@{
    ViewBag.Title = "Manage Product Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveProductCategory", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "saveProgramForm" }))
{
    @Html.AntiForgeryToken()
    <h2>Διαχείρηση των κατηγοριών για τις φωτογραφίες</h2>

    @Html.Label("Κατηγορίας Προϊόντος:")
    <text>&ensp;</text>
        @Html.TextBoxFor(m => m.NewProductCategoryName)
        <input type="submit" value="Submit" />
        }

        @if (Model.ProductCategories != null && Model.ProductCategories.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="row">Id</th>
                        <th scope="col">Όνομα κατηγορίας</th>
                        <th scope="col">Ενέργιες</th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.ProductCategories.Count; i++)
                    {
                        var temp = Model.ProductCategories[i];

                        <tr>
                            <th scope="row">@i</th>
                            <td>@temp.Name</td>
                            <td><button type="button" class="btn btn-danger">Διαγραφή</button></td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <h1>Δεν υπάρχουν κατηγορίες Προϊόντων</h1>
        }
