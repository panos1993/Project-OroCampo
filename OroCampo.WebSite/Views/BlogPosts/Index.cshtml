</section>

<section class="main_blog_area">
    <div class="container">
        <div class="row main_blog_inner">
            <div class="col-md-9">
                <div class="main_blog_items">
                    @for (int i = 0; i < Model.BlogPosts.Count; i++)
                    {

                        var temp = Model.BlogPosts[i];
                        <div class="main_blogpost_item">
                            <div class="blog_image">
                                <img src="data:image/png;base64,@temp.Photo" alt="">
                                <div class="date">
                                    <h5>@temp.DateTime.Day <br/><span>@temp.DateTime.ToString("MMM")</span></h5>
                                </div>
                            </div>
                            <div class="main_blog_text">
                                <a>
                                    <h2>@temp.Title</h2>
                                </a>
                                <div class="blog_author_area">
                                    <a><i class="fa fa-user"></i>By : <span>Admin</span></a>
                                    <a><i class="fa fa-calendar"></i><span> @temp.DateTime.ToString("dd-MMM-yyy")</span></a>
                                    <a><i class="fa fa-clock-o"></i><span> @temp.DateTime.ToString("hh:mm")</span></a>
                                </div>
                                <p>@Html.Raw(@temp.Text)</p>
                                
                            </div>
                        </div>
                    }
